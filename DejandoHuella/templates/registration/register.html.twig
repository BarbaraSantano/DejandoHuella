{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
 <div class="contenedor">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

   
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-10 bg-white rounded my-3 p-5">
    <h1 id="tituloCentrado">Regístrate</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Contraseña'
        }) }}
        {{ form_row(registrationForm.nombre) }}
        {{ form_row(registrationForm.apellido) }}
        {{ form_row(registrationForm.telefono) }}
        {{ form_row(registrationForm.direccion) }}
        {{ form_row(registrationForm.fecha_nacimiento) }}
        {{ form_row(registrationForm.iban) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Acepto los términos y condiciones'
        }) }}

        <button  id="botonCrear" type="submit">Regístrate</button>
    {{ form_end(registrationForm) }}

          </div>
        </div>
    </div>
</div>
{% endblock %}
