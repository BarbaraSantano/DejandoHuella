{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1 id="tituloCentrado">{{ animal.nombre }}</h1>

    <div class="contenedor">
    <table class="table" id ="tableShow">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ animal.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha de nacimiento</th>
                <td>{{ animal.fechaNacimiento }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ animal.sexo }}</td>
            </tr>
            <tr>
                <th>Especie</th>
                <td>{{ animal.especie }}</td>
            </tr>
            <tr>
                <th>Raza</th>
                <td>{{ animal.raza }}</td>
            </tr>
            <tr>
                <th>Esterilizado</th>
                <td>{{ animal.esterilizado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Test</th>
                <td>{{ animal.test ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ animal.edad }}</td>
            </tr>
            <tr>
                <th>Tamaño</th>
                <td>{{ animal.tamano }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ animal.descripcion }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ animal.imagen }}</td>
            </tr>
        </tbody>
    </table>

    <a id="botonCrear" href="{{ path('app_animal_index') }}">Volver al listado</a>

    <a id="botonCrear" href="{{ path('app_animal_edit', {'id': animal.id}) }}">Editar</a>

    {{ include('animal/_delete_form.html.twig') }}

    </div>
{% endblock %}
