{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<div class="contenedor">
{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label id="etiquetacentrada" for="username">Email:</label>
        <input  id="etiquetacentrada" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label id="etiquetacentrada" for="password">Contraseña:</label>
        <input  id="etiquetacentrada" type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success#}
         <input type="hidden" name="_target_path" value="/profile"/>  

        <button id="botonCrear" type="submit">Iniciar sesión</button>
        <a id="botonCrear" href= "{{ path('app_forgot_password_request') }}"> ¿Has olvidado tu contraseña?</a>
    </form>
</div>
{% endblock %}
